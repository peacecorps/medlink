!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")

    %link{:href=>"//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css", :rel=>"stylesheet"}
    %link{:href=>"//netdna.bootstrapcdn.com/font-awesome/4.0.1/css/font-awesome.min.css", :rel=>"stylesheet"}

    = javascript_include_tag "application"
    %script{:src=>"//netdna.bootstrapcdn.com/bootstrap/3.0.2/js/bootstrap.min.js"}

    %title= content_for?(:title) ? yield(:title) : "PC Medlink"
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    /[if lt IE 8]
      = stylesheet_link_tag "font-awesome-ie7.min.css", media: "all"

  %body
    .container
      .flash
        - flash.each do |name, msg|
          .flash__message.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "Confirmation", role: "dialog"}
            .modal-content
              .modal-body
                %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
                =msg
              .modal-footer
                %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
      .row
        .col-md-4
          = link_to image_tag("/logo.png", id: 'brand'), root_path
          %hgroup
            %h1 Peace Corps
            %h4 Medical Supplies
            - if current_user
              %span.badge= current_user.country.name
        .col-md-8
          %nav
            = render 'partials/global_nav'
          %section
            = yield


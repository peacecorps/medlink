= content_for :page_title do
  Forgot Password

= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-devise', method: :post }) do |f|

  .row
    .col-md-6
      = devise_error_messages!

      %p Please enter in your email address and PCV ID that we have on file.  You will receive an email with instructions to help you reset your password.

      - inputs f do |i|
        = i.email_field :email, autofocus: true
        = i.text_field :pcv_id, label: "PCV ID"

      = link_to "Cancel", new_user_session_path, class: 'btn btn-default'
      = f.submit "Reset Password", class: 'btn btn-primary'
